#!/usr/bin/env bash
bone=""
t3=""
xkb-switch | awk -F '[()]' -v awkbone="$bone" -v awkt3="$t3" '{
  replace["bone"] = awkbone;
  replace["T3"] = awkt3;
  layout = ($2 in replace) ? replace[$2] : $2;
  print layout;
}'
xkb-switch -W | while read -r line; do
if [ $line == "de(bone)" ]; then
    echo $bone
  elif [ $line == "de(T3)" ]; then
    echo $t3
  else
    echo $line
  fi
done
